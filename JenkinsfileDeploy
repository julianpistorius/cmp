pipeline {
  agent any
  environment {
    DOCKER_REGISTRY = credentials('github_docker_registry')
  }
  stages {
    stage('Login Docker') {
      steps {
        sh 'docker login -u ${DOCKER_REGISTRY_USR} -p ${DOCKER_REGISTRY_PSW} docker.pkg.github.com'
      }
    }
    stage('Deploy Backend') {
      steps {
        sh 'docker pull docker.pkg.github.com/skuzzle/cmp/backend-server:latest'
        sh 'docker service update --image docker.pkg.github.com/skuzzle/cmp/backend-server:latest cmp_cmpbackend'
      }
    }
    stage('Deploy Frontend') {
      steps {
        sh 'docker pull docker.pkg.github.com/skuzzle/cmp/frontend-server:latest'
        sh 'docker service update --image docker.pkg.github.com/skuzzle/cmp/frontend-server:latest cmp_cmpfrontend'
      }
    }
  }
}