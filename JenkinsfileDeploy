pipeline {
  agent any
  parameters {
    string(name: 'Version', defaultValue: 'latest', description: 'The docker image version to deploy')
  }
  environment {
    DOCKER_REGISTRY = credentials('github_docker_registry')
    VERSION = ${params.Version}
  }
  stages {
    stage('Login Docker') {
      steps {
        sh 'docker login -u ${DOCKER_REGISTRY_USR} -p ${DOCKER_REGISTRY_PSW} docker.pkg.github.com'
      }
    }
    stage('Pull images') {
      steps {
        sh "docker pull docker.pkg.github.com/skuzzle/cmp/backend-server:${VERSION}"
        sh "docker pull docker.pkg.github.com/skuzzle/cmp/frontend-server:${VERSION}"
      }
    }
    stage('Update Stack') {
      steps {
        sh "docker stack deploy --compose-file swarm-stack/production.yml --prune cmp
      }
    }
  }
}