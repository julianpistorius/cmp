pipeline {
  agent any
  environment {
    DOCKER_REGISTRY = credentials('github_docker_registry')
  }
  stages {
    stage('Undeploy') {
      steps {
        sh 'cd /docker/cmp && docker-compose down || true'
      }
    }
    stage('Pull latest') {
      steps {
        sh 'docker login -u ${DOCKER_REGISTRY_USR} -p ${DOCKER_REGISTRY_PSW} docker.pkg.github.com'
        sh 'cd /docker/cmp && docker-compose pull'
      }
    }
    stage('Deploy') {
      steps {
        sh 'cd /docker/cmp && docker-compose up -d'
      }
    }
  }
}
